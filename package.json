{
  "name": "moneyxchange-io-backend",
  "version": "1.4.0",
  "description": "",
  "main": "./src/index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "eslint": "./node_modules/.bin/eslint ./src/index.js",
    "test": "npm run eslint && cross-env NODE_ENV=test ENV_FILE=test.env jest --coverage --testTimeout=60000 --detectOpenHandles",
    "test:debug": "cross-env NODE_ENV=test ENV_FILE=test.env node --inspect-brk node_modules/.bin/jest --coverage --testTimeout=60000 --detectOpenHandles",
    "dev": "npm run eslint && cross-env NODE_ENV=development ENV_FILE=development.env nodemon --exec babel-node ./src/index.js",
    "dev:debug": "cross-env NODE_ENV=development ENV_FILE=development.env babel-node ./src/index.js --inspect-brk",
    "start": "babel-node ./src/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "^6.0.3",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.21.2",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.2",
    "morgan": "^1.9.1",
    "mysql2": "^2.0.0",
    "p-pipe": "^3.0.0",
    "path": "^0.12.7",
    "sequelize": "^5.21.2",
    "uuid": "^3.3.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@babel/node": "^7.7.0",
    "@babel/preset-env": "^7.7.1",
    "babel-jest": "^24.9.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "commitizen": "^4.0.3",
    "eslint": "^6.6.0",
    "jest": "^24.9.0",
    "nodemon": "^1.19.4",
    "sequelize-cli": "^5.5.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "moduleNameMapper": {
      "@root/(.*)": "<rootDir>/$1",
      "@server": "<rootDir>/src/index.js",
      "@services(.*)": "<rootDir>/src/services$1",
      "@db(.*)": "<rootDir>/src/db$1",
      "@api(.*)": "<rootDir>/src/api$1",
      "@models(.*)": "<rootDir>/src/models$1",
      "@utils(.*)": "<rootDir>/src/utils$1"
    }
  },
  "_moduleAliases": {
    "@root": ".",
    "@server": "src/index.js",
    "@services": "src/services",
    "@db": "src/db",
    "@api": "src/api",
    "@models": "src/models",
    "@utils": "src/utils"
  }
}
